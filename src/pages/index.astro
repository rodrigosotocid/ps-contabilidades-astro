---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import ServicioCard from "../components/ServicioCard.astro";
import ContactForm from "../components/ContactForm.astro";
---

<Layout title="PS Contabilidades - Servicios Tributarios y Contables">
  <Header />
  <main>
    <section
      id="inicio"
      class="relative py-20 bg-[url('/header-contable.jpg')] bg-center bg-cover text-white"
    >
      <!-- Capa oscura superpuesta -->
      <div class="absolute inset-0 bg-black opacity-60"></div>

      <!-- Contenido principal -->
      <div class="container relative z-10 mx-auto px-4 text-center">
        <h1 class="text-5xl font-bold mb-4">PS Contabilidades</h1>
        <p class="text-xl mb-8">Servicios tributarios y contables de calidad</p>
        <a
          href="#contacto"
          class="bg-white text-primary font-bold py-2 px-6 rounded-full hover:bg-opacity-90 transition duration-300"
          >Contáctanos</a
        >
      </div>
    </section>

    <section id="servicios" class="py-20">
      <div class="container mx-auto px-4">
        <h2 class="text-4xl font-bold text-center mb-12 text-primary">
          Nuestros Servicios
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          <ServicioCard
            titulo="Creación de Sociedades"
            descripcion="Asesoramos en la creación y constitución de sociedades."
            icono="🏢"
          />
          <ServicioCard
            titulo="Inicio de Actividades"
            descripcion="Te ayudamos con el proceso de inicio de actividades ante el SII."
            icono="🚀"
          />
          <ServicioCard
            titulo="Facturación Electrónica"
            descripcion="Implementamos y gestionamos tu facturación electrónica."
            icono="🧾"
          />
          <ServicioCard
            titulo="Impuestos Mensuales y Anuales"
            descripcion="Nos encargamos de tus declaraciones de impuestos mensuales y anuales."
            icono="📅"
          />
          <ServicioCard
            titulo="Gestión de Personal"
            descripcion="Contratos, liquidaciones de sueldo, licencias médicas y finiquitos."
            icono="👥"
          />
          <ServicioCard
            titulo="Declaraciones de Renta"
            descripcion="Preparamos tus declaraciones de renta de primera y segunda categoría."
            icono="💼"
          />
        </div>
      </div>
    </section>

    <section id="sobre-mi" class="py-20 bg-gray-100">
      <div class="container mx-auto px-4">
        <h2 class="text-4xl font-bold text-center mb-12 text-primary">
          Sobre Mí
        </h2>
        <div class="flex flex-col md:flex-row items-center justify-center">
          <div class="md:w-1/2 mb-8 md:mb-0 md:pr-8">
            <img
              src="/pamela.png"
              alt="Pamela Soto Cid"
              class="rounded-full w-64 h-64 object-cover mx-auto"
            />
          </div>
          <div class="md:w-1/2">
            <h3 class="text-2xl font-semibold mb-4 text-primary">
              Pamela Soto Cid
            </h3>
            <p class="text-gray-700 mb-4">
              Soy Contador Auditor con más de 10 años de experiencia en el campo
              tributario y contable. Mi pasión es ayudar a empresas y personas a
              optimizar sus finanzas y cumplir con sus obligaciones fiscales de
              manera eficiente.
            </p>
            <p class="text-gray-700">
              Mi enfoque se centra en proporcionar un servicio personalizado y
              de alta calidad, adaptado a las necesidades específicas de cada
              cliente.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Asegúrate de tener instalada la librería de íconos que elijas -->
    <section
      id="contacto"
      class="py-20 bg-gradient-to-r from-gray-100 to-gray-200"
    >
      <div class="container mx-auto px-4">
        <h2 class="text-4xl font-bold text-center mb-12 text-primary">
          Información de Contacto
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <!-- Horario -->
          <div
            class="bg-white rounded-lg shadow-lg p-6 flex flex-col items-center transform hover:scale-105 transition duration-300"
          >
            <div class="text-primary text-4xl mb-4">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                class="size-6"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M12 6v6h4.5m4.5 0a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z"></path>
              </svg>
            </div>
            <p class="text-gray-700 font-semibold text-center">
              Lunes a Viernes de 9:00 a 19:00 horas
            </p>
          </div>
          <!-- Teléfono -->
          <div
            class="bg-white rounded-lg shadow-lg p-6 flex flex-col items-center transform hover:scale-105 transition duration-300"
          >
            <div class="text-primary text-4xl mb-4">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                class="size-6"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 0 0 2.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 0 1-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 0 0-1.091-.852H4.5A2.25 2.25 0 0 0 2.25 4.5v2.25Z"
                ></path>
              </svg>
            </div>
            <a
              href="https://wa.me/56950683281"
              target="_blank"
              class="text-gray-700 font-semibold text-center hover:text-primary transition duration-300"
            >
              +56 950683281
            </a>
          </div>
          <!-- Email -->
          <div
            class="bg-white rounded-lg shadow-lg p-6 flex flex-col items-center transform hover:scale-105 transition duration-300"
          >
            <div class="text-primary text-4xl mb-4">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                class="size-6"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M21.75 6.75v10.5a2.25 2.25 0 0 1-2.25 2.25h-15a2.25 2.25 0 0 1-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0 0 19.5 4.5h-15a2.25 2.25 0 0 0-2.25 2.25m19.5 0v.243a2.25 2.25 0 0 1-1.07 1.916l-7.5 4.615a2.25 2.25 0 0 1-2.36 0L3.32 8.91a2.25 2.25 0 0 1-1.07-1.916V6.75"
                ></path>
              </svg>
            </div>
            <a
              href="mailto:pamelasotocontabilidades@gmail.com"
              target="_blank"
              class="text-gray-700 font-semibold text-center hover:text-primary transition duration-300"
            >
              pamelasotocontabilidades@gmail.com
            </a>
          </div>
        </div>
        <!-- Texto centrado en la parte de abajo -->
        <p class="mt-12 text-gray-700 text-center font-medium">
          Consultas al WhatsApp o Email. Agenda tu entrevista si lo necesitas.
        </p>
      </div>
    </section>
  </main>
  <footer class="bg-gray-900 text-white py-8">
    <div class="container mx-auto px-4 text-center">
      <p>&copy; 2024 PS Contabilidades. Todos los derechos reservados.</p>
    </div>
  </footer>
</Layout>
